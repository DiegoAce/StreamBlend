{
    
    "manifest_version": 2,
    "name": "StreamBlend",
    "version": "1.13",
    "description": "Blends your follows from multiple sites into one list.",
    "icons": {
        "16": "images/16.png",
        "32": "images/32.png",
        "48": "images/48.png",
        "96": "images/96.png",
        "128": "images/128.png"
    },
    "permissions": [
        "identity",
        "storage",
        "*://*.mixer.com/*",
        "*://*.twitch.tv/*",
        "*://*.google.com/*",
        "*://*.googleapis.com/*",
        "*://*.youtube.com/*",
        "*://*.dlive.tv/*",
        "*://*.smashcast.tv/*"
    ],
    "options_ui": {
        "page": "options.html"
    },
    "background": {
        "scripts": ["background.js"]
    },
    "content_scripts": [
        {
            "matches": ["*://*.twitch.tv/*"],
            "js": ["contentTwitch.js"]
        },
        {
            "matches": ["*://*.mixer.com/*"],
            "css": ["contentMixer.css"],
            "js": ["contentMixer.js"]
        },
        {
            "matches": ["https://sites.google.com/site/streamblend/oauth"],
            "js": ["oauth.js"],
            "all_frames": true
        },
        {
            "matches": ["https://streamblend.github.io/oauth"],
            "js": ["oauth.js"],
            "all_frames": true
        }
    ],
    "browser_action": {
        "default_icon": {
            "16": "images/16.png",
            "32": "images/32.png",
            "48": "images/48.png",
            "96": "images/96.png",
            "128": "images/128.png"
        },
        "default_title": "StreamBlend",
        "default_popup": "popup.html"
    },
    "web_accessible_resources": [
        "images/*",
        "fonts/*"
    ],
    
    
    "FireFoxOnlyData": {
        "browser_specific_settings": {
            "gecko": {
                "id": "{9c4f0f69-582d-4255-9ee6-f3ff8899bd18}",
                "strict_min_version": "57.0"
            }
        }
    },
    
    "ChromeOnlyData": {
    }
    
}
