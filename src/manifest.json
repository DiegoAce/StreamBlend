{
    
    "manifest_version": 2,
    "name": "StreamBlend",
    "version": "1.3",
    "description": "Blends your follows from multiple sites into one list.",
    "icons": {
        "16": "icons/16.png",
        "48": "icons/48.png",
        "96": "icons/96.png",
        "128": "icons/128.png"
    },
    "permissions": [
        "tabs",
        "storage",
        "*://mixer.com/*",
        "*://*.mixer.com/*",
        "*://twitch.tv/*",
        "*://*.twitch.tv/*",
        "*://googleapis.com/*",
        "*://*.googleapis.com/*",
        "*://youtube.com/*",
        "*://*.youtube.com/*"
    ],
    "options_ui": {
        "page": "options.html"
    },
    "background": {
        "scripts": ["background.js"]
    },
    "content_scripts": [
        {
            "matches": ["*://*.twitch.tv/*"],
            "js": ["content.js"]
        }
    ],
    "browser_action": {
        "default_icon": {
            "16": "icons/16.png",
            "48": "icons/48.png",
            "96": "icons/96.png",
            "128": "icons/128.png"
        },
        "default_title": "StreamBlend",
        "default_popup": "popup.html"
    },
    
    
    "FireFoxOnlyData": {
        "browser_specific_settings": {
            "gecko": {
                "id": "{9c4f0f69-582d-4255-9ee6-f3ff8899bd18}",
                "strict_min_version": "57.0"
            }
        }
    },
    
    "ChromeOnlyData": {
    }
    
}
